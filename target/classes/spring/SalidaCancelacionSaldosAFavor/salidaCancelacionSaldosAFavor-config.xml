	<context:property-placeholder
		ignore-resource-not-found="true"
		location="file:${PATH_PROPERTIES_INTEGRATOR}/SalidaCancelacionSaldosAFavor/SalidaCancelacionSaldosAFavor.properties" />
	<bean id="log4jInitialization"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetClass" value="org.springframework.util.Log4jConfigurer" />
		<property name="targetMethod" value="initLogging" />
		<property name="arguments">
			<list>
				<value>file:${PATH_PROPERTIES_INTEGRATOR}/SalidaCancelacionSaldosAFavor/SalidaCancelacionSaldosAFavor-log4j.xml</value>
			</list>
		</property>
	</bean>
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="${mail.host}" />
		<property name="port" value="${mail.port}" />


		<property name="javaMailProperties">
			<props>
				<prop key="mail.smtp.auth">false</prop>
				<prop key="mail.smtp.starttls.enable">true</prop>
			</props>
		</property>
	</bean>
	<bean id="mailGeneric" class="co.com.claro.MailGenericAPI.MailGeneric">
		<constructor-arg ref="mailSender" />
	</bean>
		<!-- PGP Util -->
	<bean id="pgpUtil" class="co.com.claro.BCPGPAPI.BCPGPUtil">
			<property name="pathKeyfile" value="${pgp.pathKeyfile}" />    	
			<property name="passphrase" value="${pgp.passphrase}"/>
			<property name="signingPublicKeyFilePath" value="${pgp.signingPublicKeyFilePath}"/>
			<property name="pgpJarFile" value="${pgp.pgpJarFile}"/>
	</bean>	
	<bean name="genericProccess"
		class="co.com.claro.financialintegrator.implement.SalidaCancelacionSaldosAFavor">
		<property name="mail" ref="mailGeneric" />
		<property name="pgpUtil" ref="pgpUtil" />
		<property name="pros">
			<props>
				<prop key="path">${file.pathProccess}</prop>
				<prop key="fileOutputExt">${file.fileOutputExt}</prop>
				<prop key="ExtfileProcess">${file.ExtfileProcess}</prop>
				<prop key="fileProccess">${file.fileProccess}</prop>
				<prop key="nameFile">${file.nameFile}</prop>
				<prop key="fileProccessBCSC">${file.fileProccessBCSC}</prop>
				<prop key="fileMovMonetario">${file.fileMovMonetario}</prop>
				<prop key="fileSalidaCancelacionSaldosAFavor">${file.fileSalidaCancelacionSaldosAFavor}</prop>
				<prop key="WSLAuditoriaBatchPagoTimeOut">${wsdl.WSLAuditoriaBatchPagoTimeOut}</prop>
				<prop key="WSLAuditoriaBatchAddress">${wsdl.WSLAuditoriaBatchAddress}</prop>
				<prop key="WSLConsultaCodigoErroresCodigoPagoAddress">${wsdl.WSLConsultaCodigoErroresCodigoPagoAddress}</prop>
                <prop key="WSLConsultaCodigoErroresCodigoPagoTimeOut">${wsdl.WSLConsultaCodigoErroresCodigoPagoTimeOut}</prop>
                <prop key="MVDTPRVALUE">${CRMVD.MVDTPR}</prop>
                <prop key="MVDORIVALUE">${CRMVD.MVDORI}</prop>     		
                <prop key="MVDTRNVALUE">${CRMVD.MVDTRN}</prop>  
                <prop key="MVDCONVALUE">${CRMVD.MVDCON}</prop>  
				<prop key="fromAddress">${mail.fromAddress}</prop>
				<prop key="toAddressNotificacion">${mail.toAddressNotificacion}</prop>
				<prop key="subject">${mail.subject}</prop>
				<prop key="msgBody">${mail.msgBody}</prop>
				<prop key="BatchName">SalidaCancelacionSaldosAFavor</prop>
			</props>
		</property>
	</bean>
	<bean name="complexJobDetail"
		class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass"
			value="co.com.claro.financialintegrator.spring.quartz.ScheduledJob" />
		<property name="jobDataMap">
			<map>
				<entry key="genericProccess" value-ref="genericProccess" />
			</map>
		</property>
		<property name="durability" value="true" />
	</bean>

	<!-- Run the job every 5 seconds only on Weekends -->
	<bean id="cronTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="complexJobDetail" />
		<property name="cronExpression" value="${quartz.cronExpression}" />
	</bean>
	<!-- Scheduler factory bean to glue together jobDetails and triggers to 
		Configure Quartz Scheduler -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobDetails">
			<list>
				<ref bean="complexJobDetail" />
			</list>
		</property>

		<property name="triggers">
			<list>
				<ref bean="cronTrigger" />
			</list>
		</property>
	</bean>
</beans>