<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">


	<context:property-placeholder
		ignore-resource-not-found="true"
		location="file:${PATH_PROPERTIES_INTEGRATOR}/Contabilidad/Contabilidad.properties" />
	<bean id="log4jInitialization"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetClass" value="org.springframework.util.Log4jConfigurer" />
		<property name="targetMethod" value="initLogging" />
		<property name="arguments">
			<list>
				<value>file:${PATH_PROPERTIES_INTEGRATOR}/Contabilidad/Contabilidad-log4j.xml</value>
			</list>
		</property>
	</bean>
	
	<!-- PGP Util -->
	<bean id="pgpUtil" class="co.com.claro.BCPGPAPI.BCPGPUtil">
			<property name="pathKeyfile" value="${pgp.pathKeyfile}" />    	
			<property name="passphrase" value="${pgp.passphrase}"/>
			<property name="signingPublicKeyFilePath" value="${pgp.signingPublicKeyFilePath}"/>
			<property name="pgpJarFile" value="${pgp.pgpJarFile}"/>
	</bean>
    <bean name="genericProccess" class="co.com.claro.financialintegrator.implement.Contabilidad">
    	<property name="pgpUtil" ref="pgpUtil" />
    	<property name="pros">
    		<props>
    			<prop key="path">${file.pathProccess}</prop>
    			<prop key="ExtfileProcess">${file.ExtfileProcess}</prop>
    			<prop key="fileProccess">${file.fileProccess}</prop>  
    			<prop key="fileProccessBSCS">${file.fileProccessBSCS}</prop>   			
				<prop key="WSLAuditoriaBatchPagoTimeOut">${wsdl.WSLAuditoriaBatchPagoTimeOut}</prop>
				<prop key="WSLAuditoriaBatchAddress">${wsdl.WSLAuditoriaBatchAddress}</prop>
				<prop key="fileOutputExt">${fileOutput.ext}</prop>
				<prop key="BatchName">Contabilidad</prop>
				
    		</props>
    	</property>
    </bean>
    <bean name="complexJobDetail"    class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="jobClass" value="co.com.claro.financialintegrator.spring.quartz.ScheduledJob" />
        <property name="jobDataMap">
            <map>
                <entry key="genericProccess" value-ref="genericProccess" />
            </map>
        </property>
        <property name="durability" value="true" />
    </bean>
  
    <!-- Run the job every 5 seconds only on Weekends -->
    <bean id="cronTrigger"  class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="complexJobDetail" />
        <property name="cronExpression" value="${quartz.cronExpression}" />
    </bean>
    <!-- Scheduler factory bean to glue together jobDetails and triggers to Configure Quartz Scheduler -->
    <bean  class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="jobDetails">
            <list>                
                <ref bean="complexJobDetail" />
            </list>
        </property>
 
        <property name="triggers">
            <list>               
                <ref bean="cronTrigger" />
            </list>
        </property>
    </bean>
</beans>