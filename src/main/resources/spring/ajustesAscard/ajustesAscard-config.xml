<!-- 	</bean>	 -->
	<!-- AJUSTES ASCARD  -->
	<bean name="genericProccess"
		class="co.com.claro.financialintegrator.implement.AjustesAscard">
		<property name="scheduler" ref="quartzFactory" />		
		<property name="pros">
			<props>
    			<prop key="WSLConsultaConfiguracionBatchAddress">${wsdl.WSLConsultaConfiguracionBatchAddress}</prop>
    		    <prop key="WSLConsultaConfiguracionBatchTimeOut">${wsdl.WSLConsultaConfiguracionBatchTimeOut}</prop>				
				<prop key="BatchName">AjustesAscard</prop>
			</props>
		</property>
	</bean>
	<bean name="complexJobDetail"
		class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass"
			value="co.com.claro.financialintegrator.spring.quartz.ScheduledJob" />
		<property name="jobDataMap">
			<map>
				<entry key="genericProccess" value-ref="genericProccess" />
			</map>
		</property>
		<property name="durability" value="true" />
	</bean>

	<!-- Run the job every 5 seconds only on Weekends -->
	<bean id="cronTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="complexJobDetail" />
		<property name="cronExpression" value="${quartz.cronExpression}" />
	</bean>
	<!-- AJUSTES FIJA  ASCARD  -->
	<bean name="genericProccessAjustesFija"
		class="co.com.claro.financialintegrator.implement.AjustesFijaAscard">		
		<property name="pros">
			<props>
    			<prop key="WSLConsultaConfiguracionBatchAddress">${wsdl.WSLConsultaConfiguracionBatchAddress}</prop>
    		    <prop key="WSLConsultaConfiguracionBatchTimeOut">${wsdl.WSLConsultaConfiguracionBatchTimeOut}</prop>					
				<prop key="BatchName">AjustesAscardFija</prop>
			</props>
		</property>
	</bean>
	<bean name="complexJobDetailAjustesFija"
		class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass"
			value="co.com.claro.financialintegrator.spring.quartz.ScheduledJob" />
		<property name="jobDataMap">
			<map>
				<entry key="genericProccess" value-ref="genericProccessAjustesFija" />
			</map>
		</property>
		<property name="durability" value="true" />
	</bean>

	<!-- Run the job every 5 seconds only on Weekends -->
	<bean id="cronTriggerAjustesFija"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="complexJobDetailAjustesFija" />
		<property name="cronExpression" value="${quartz.ajustesfija.cronExpression}" />
	</bean>
	<!-- Scheduler factory bean to glue together jobDetails and triggers to 
		Configure Quartz Scheduler -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean" id="quartzFactory" name="quartzFactory">
		<property name="jobDetails">
			<list>
				<ref bean="complexJobDetail" />
				<ref bean="complexJobDetailAjustesFija" />
			</list>
		</property>

		<property name="triggers">
			<list>
				<ref bean="cronTrigger" />
				<ref bean="cronTriggerAjustesFija" />
			</list>
		</property>
	</bean>
</beans>